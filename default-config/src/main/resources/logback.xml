<configuration>
    <appender name="debug" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5p | %d{ISO8601} | %t | %logger{0} | %m%n</pattern>
        </encoder>
    </appender>
    <root level="TRACE">
        <appender-ref ref="debug"/>
    </root>
</configuration>