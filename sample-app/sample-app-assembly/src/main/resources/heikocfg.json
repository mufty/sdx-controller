{
  "aliases" : {"telescopeDriver": "net.gabert.sdx.sampleapp.driver.TelescopeDriver",
               "housingDriver": "net.gabert.sdx.sampleapp.driver.HousingDriver" },

  "bus" : {"configUrl" : "classpath:kylacfg.json"},

  "drivers" : [
    {"driverClassName": "${telescopeDriver}",
     "id": "td-1" ,
     "initParams": {"param1" : 1}},

    {"driverClassName": "${housingDriver}",
     "id": "hd-1" ,
     "initParams": {"param1" : 1}},

    {"driverClassName": "${housingDriver}",
      "id": "hd-2" ,
      "initParams": {"param1" : 1}}
  ],

  "services" : [
    {"serviceClassName": "net.gabert.sdx.heiko.connector.http.HttpApplication",
      "id": "heikoBrowser",
      "initParams": {"welcomeFile" : "index.html",
                     "contextPath" : "/browser",
                     "guiRootPath" : "/browser",
                     "servicePort" : 9090}},

    {"serviceClassName": "net.gabert.sdx.heiko.connector.http.HttpConnector",
      "id": "httpConnector",
      "initParams": {"contextPath" : "/connector",
                     "servicePort" : 9091}}
  ],

  "mappings" : {
    "/system/devices/td-1": "/iot/telescopes/palo-alto"
  }
}
